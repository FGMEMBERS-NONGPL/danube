 <!-- hotspot picks -->
 <animation>
	<type>pick</type>
	<object-name>panel.frame</object-name>
	<action>
		<name>panel-select</name>
		<button>0</button>
		<binding>
			<command>property-adjust</command>
			<property>sim/model/danube/lighting/LCARS-panel</property>
			<step>1</step>
			<min>0</min>
			<max>2</max>
			<wrap>true</wrap>
		</binding>
	</action>
 </animation>

